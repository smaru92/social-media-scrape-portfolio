# booking-api/Dockerfile

FROM python:3.12

# 작업 디렉토리 설정
WORKDIR /insta-api

# requirements.txt 파일을 컨테이너에 복사
COPY ./requirements.txt /insta-api/requirements.txt

# pip 업데이트 및 필요한 패키지 설치
RUN pip install --upgrade pip     && pip install --no-cache-dir -r /insta-api/requirements.txt     && playwright install     && playwright install-deps

# 애플리케이션 소스 파일 전체 복사
COPY . /insta-api
ENV TZ Asia/Seoul
# FastAPI 애플리케이션 실행
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8085"]